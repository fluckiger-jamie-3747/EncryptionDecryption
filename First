def encrypt(sentence):

    result = []

    for letter in sentence:

        l_var = ord(letter) - 200
        result.append(l_var)

    print("This is your encrypted password!")
    for numbers in result:
          print(numbers, end='')
          print(" ",end='')
          
    print()
#save result (encrypted password) to file
#user name is file name, read encrypted file password
#run input through decryped result, if

    decrypt(result)

def decrypt(result):

    end_string = ""

    for numbers in result:

        l_var = int(numbers)
        l_var = l_var + 200
        l_var = chr(l_var)
        end_string = end_string + l_var
    print("Your decrypted message is: ")
    print(end_string)

